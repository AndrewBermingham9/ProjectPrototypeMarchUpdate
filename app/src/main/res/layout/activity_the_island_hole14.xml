<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5E61D"
    tools:context=".TheIslandHole14">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/Hole14Titletv"
                android:layout_width="349dp"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:layout_marginStart="212dp"
                android:layout_marginLeft="212dp"
                android:layout_marginEnd="212dp"
                android:layout_marginRight="212dp"
                android:layout_marginBottom="85dp"
                android:text="The Island Golf Club"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Hole14SubTitletv"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="212dp"
                android:layout_marginLeft="212dp"
                android:layout_marginEnd="212dp"
                android:layout_marginRight="212dp"
                android:layout_marginBottom="85dp"
                android:text="Hole 14: Old Clubhouse"
                android:textSize="30sp"
                android:textStyle="italic" />


            <ImageView
                android:layout_width="674dp"
                android:layout_height="774dp"
                android:layout_gravity="center"
                android:layout_marginStart="107dp"
                android:layout_marginLeft="107dp"
                android:layout_marginEnd="109dp"
                android:layout_marginRight="109dp"
                android:layout_marginBottom="85dp"
                android:scaleType="fitXY"
                android:src="@drawable/hole14" />

            <TextView
                android:id="@+id/Hole14description"
                android:layout_width="601dp"
                android:layout_height="347dp"
                android:layout_gravity="center"
                android:layout_marginStart="212dp"
                android:layout_marginLeft="212dp"
                android:layout_marginEnd="212dp"
                android:layout_marginRight="212dp"
                android:layout_marginBottom="85dp"
                android:text="@string/hole14description"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/NextHole"
                android:layout_width="259dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="212dp"
                android:layout_marginLeft="212dp"
                android:layout_marginEnd="212dp"
                android:layout_marginRight="212dp"
                android:layout_marginBottom="85dp"
                android:text="Next Hole"
                android:textSize="30sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/PrevHole"
                android:layout_width="259dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginStart="212dp"
                android:layout_marginLeft="212dp"
                android:layout_marginEnd="212dp"
                android:layout_marginRight="212dp"
                android:layout_marginBottom="85dp"
                android:text="Previous Hole"
                android:textSize="30sp"
                android:textStyle="italic" />



        </LinearLayout>

    </ScrollView>


</RelativeLayout>